#include<iostream>
using namespace std;
int fact(int n){
	if(n==0 || n==1)
	return 1;
	else 
	return n*fact(n-1);
}
int main(){
	int n,result;
	cout<<"Enter a number"<<endl;
	cin>>n;
	if(n<0)
	cout<<"It is an negative number"<<endl;
	else 
	result = fact(n);
	cout<<"The factorial of "<<n<<" is "<<result;
	return 0;
}
