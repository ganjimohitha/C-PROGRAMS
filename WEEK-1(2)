#include<iostream>
using namespace std;
void swap(int x,int y){
	int temp = x;
	x = y;
	y = temp;
}
int main(){
    int a,b;
    cout<<"Enter the a and b values"<<endl;
    cin>>a>>b;
    cout<<"Before swapping a is "<<a<<" and b is "<<b<<endl;
    swap(a,b);
    cout<<"After swapping a is "<<a<<" and b is "<<b<<endl;
	return 0;
}

#include<iostream>
using namespace std;
void swap(int *x,int *y){
	int temp = *x;
	*x = *y;
	*y = temp;
}
int main(){
    int a,b;
    cout<<"Enter the a and b values"<<endl;
    cin>>a>>b;
    cout<<"Before swapping a is "<<a<<" and b is "<<b<<endl;
    swap(&a,&b);
    cout<<"After swapping a is "<<a<<" and b is "<<b<<endl;
	return 0;
}
